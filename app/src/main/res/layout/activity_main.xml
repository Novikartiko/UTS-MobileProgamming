<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/w"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MainActivity">

    <Button
            android:layout_marginTop="150dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:background="#f7f6f6"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/btnPindahActivityImplisit"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Info"
            android:textColor="#fcfafa"
            android:textSize="20dp"
            android:background="#000"
            android:id="@+id/btnPindahActivityExplisit"/>
    <Button
            android:layout_width="match_parent"
            android:background="#f2f0f0"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/btnPindahActivityIntentBundle"/>

</LinearLayout>