<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B93B8F"
        android:orientation="vertical"
        tools:context=".BundleActivity">
        <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/pubg"
                android:scaleType="centerCrop"/>

        <ImageView
                android:id="@+id/user_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-97dp"
                android:elevation="5dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/n"/>

        <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:background="#B93B8F"
                android:elevation="4dp"
                android:paddingBottom="24dp">


        </RelativeLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="vertical" android:layout_alignParentStart="true">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:id="@+id/tvNama"
                    android:text="NOVI KARTIKO"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:id="@+id/tvNPM"
                    android:text="16670066"/>


            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:id="@+id/tvE-Mail"
                    android:text="novikartiko27@gmail.com"/>
        </LinearLayout>
</RelativeLayout>